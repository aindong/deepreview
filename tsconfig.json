{
    "compilerOptions": {
      "target": "ES2022",
      "module": "CommonJS",
      "resolveJsonModule": true,
      "outDir": "dist",
      "rootDir": "src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "moduleResolution": "Node",
      "forceConsistentCasingInFileNames": true,
      "declaration": true
    }
